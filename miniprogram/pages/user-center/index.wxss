.page_container {
  background-color: #f5f5f5;
  height: 100vh;
  font-family: PingFang SC;
}

.top_bg {
  height: 120rpx;
}

.main_content {
  background-color: #fff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  height: calc(100vh - 120rpx);
  position: relative;
}

.userinfo_container {
  display: flex;
  gap: 80rpx;
  align-items: center;
  gap: 20rpx;
  position: absolute;
  top: -30rpx;
  padding: 0rpx 60rpx;
}

.avatar {
  width: 128rpx;  /* 设置宽度 */
  height: 128rpx; /* 设置高度 */
  border-radius: 50%; /* 圆形头像 */
  border: 2px solid #ccc; /* 可选的边框 */
}

.username {
  color: #333;
  font-size: 32rpx;
  margin-top: 20rpx;
  color: rgba(0, 0, 0, 0.9);
  max-width: 200rpx;
  margin-left: 10rpx
}

.settings_container {
  position: relative;
  top: 150rpx;
  padding: 0 40rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.setting_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.08);
  font-size: 28rpx;
}

.left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.contact-button {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  box-sizing: border-box;
  padding-left: 0rpx;
  margin: 0;
  width: 400rpx;
  font-weight: 400;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.9);
  line-height: 56rpx;
  text-align: left;
  background-color:#ffffff;
}

.contact-button::after{
  border: none;
}

.button-hover {
  background-color: #fff;
}

.setting_icon {
  width: 40rpx;
  height: 40rpx;
}

.setting_text {
  color: rgba(0, 0, 0, 0.9);
}

.arrow_icon {
  width: 30rpx;
  height: 30rpx;
}

.logout-button {
  position: absolute;
  top: 10px;   /* 距离底部20px */
  right: 10px;    /* 距离右边20px */
  background-color: #ebe84f8f;  /* 红色背景 */
  color: black;
  border-radius: 30px;  /* 圆角 */
  font-size: 30rpx;
  border: none;
}
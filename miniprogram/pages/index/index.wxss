.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

.form-item {
  display: flex;
  align-items: center; /* 垂直居中 */
  margin-bottom: 20rpx;
}

.label {
  width: 200rpx; /* 固定文字宽度，确保对齐 */
  font-size: 28rpx;
  color: #333;
}

input, .picker {
  flex: 1;
  height: 40rpx;
  padding: 10rpx;
  font-size: 28rpx;
  border: 1px solid #ccc;
  border-radius: 5rpx;
  background-color: #fff;
}

.checkbox-group {
  display: flex;
  flex-wrap: wrap; /* 多行排列 */
  margin-left: rpx;
}

.checkbox-item {
  align-items: center;
  font-size: 32rpx;
  color: #333;
}


.submit-btn {
  width: 100%;
  padding: 20rpx;
  background-color: #4CAF50;
  color: white;
  border-radius: 36rpx;
  font-size: 32rpx;
  text-align: center;
}

.add-subject-btn {
  background-color: #8b5e1ed0;
  color: white;
  border-radius: 5rpx;
  font-size: 28rpx;
}

.dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999; /* 确保弹窗在最上层 */
}

.dialog-content {
  background-color: white;
  padding: 20rpx;
  border-radius: 5rpx;
  width: 80%;
  max-width: 500rpx;
  z-index: 10000; /* 弹窗内容的 z-index */
}

.dialog-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 20rpx;
}

.dialog-input {
  width: 95%;
  padding: 10rpx;
  border: 1px solid #ccc;
  margin-top: 20rpx;
  font-size: 28rpx;
}

.dialog-buttons {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}

.dialog-btn {
  background-color:#291a11; 
  color: white;
  border-radius: 5rpx;
  font-size: 36rpx;
  height: 40rpx;
  
}


/* pages/login/index.wxss */
.title{
  font-size:48rpx;
  line-height:80rpx;
  text-align:center;
}
.info{
  margin-top:16rpx;
  text-align:center;
}
.btn {
  margin-top:120rpx;
  background-color: #28a745; /* 设置绿色背景 */
  color: white;               /* 设置文字为白色 */
  border-radius: 25px;        /* 圆角按钮 */
  padding: 12px 30px;         /* 内边距 */
  font-size: 16px;            /* 字体大小 */
  border: none;               /* 去除默认边框 */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* 添加阴影 */
}

.admin-button {
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  background-color: #000;
  color: #fff;
  border-radius: 50%;
  width: 60rpx;  /* 调整按钮大小 */
  height: 60rpx; /* 调整按钮大小 */
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;  /* 调整字体大小 */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  cursor: pointer; /* 鼠标悬停时显示为点击样式 */
}

/* 密码输入框的样式 */
.password-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 密码框内容 */
.password-modal-content {
  background-color: #fff;
  padding: 40rpx;
  border-radius: 6rpx;
  width: 80%;
  max-width: 300rpx;
  text-align: center;
}

/* 输入框 */
.password-modal-content input {
  width: 100%;
  padding: 12rpx;
  margin-top: 20rpx;
  border: 1rpx solid #ccc;
  border-radius: 6rpx;
}

/* 按钮样式 */
.password-modal-content button {
  width: 100%;
  padding: 10rpx;  /* 调整按钮的内边距 */
  margin-top: 10rpx; /* 给按钮之间留点间隙 */
  background-color: #28a745;
  color: #fff;
  border: none;
  border-radius: 6rpx;
  cursor: pointer;
  font-size: 26rpx; /* 调整字体大小 */
}

/* 取消按钮 */
.password-modal-content button:last-child {
  background-color: #dc3545; /* 红色背景 */
}

/* 使按钮宽度适应并且不超出 */
.password-modal-content button:nth-child(2) {
  margin-top: 10rpx;
}